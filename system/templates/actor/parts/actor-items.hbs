<div class='sheet-section'>
    <header>
        <div>{{loc 'equipment.weapons'}}</div>
        <div><a class='item-control item-create' title='{{loc "add"}}' data-type='weapon'><i
                    class='fas fa-plus'
                ></i>
                {{loc 'add'}}</a></div>
    </header>
    <div class='sheet-section-content'>
        <ol class='items-list'>
            {{#if weapons}}
                <li class='item flexrow items-header'>
                    <div class='item-name'>{{loc 'equipment.weapon'}}</div>
                    <div class='item-bonus item-prop'>{{loc 'equipment.bonus'}}</div>
                    <div class='item-damage item-prop'>{{loc 'equipment.damage'}}</div>
                    <div class='item-range item-prop'>{{loc 'equipment.range'}}</div>
                    <div class='item-controls'></div>
                </li>
            {{/if}}
            {{#each weapons as |item id|}}
                <li class='item flexrow' data-item-id='{{item._id}}'>
                    <div class='item-name'>
                        <div class='item-image'>
                            <a class='item-roll' data-roll-type='talent'><img
                                    src='{{item.img}}'
                                    title='{{item.name}}'
                                    width='24'
                                    height='24'
                                /></a>
                        </div>
                        <h4>{{item.name}}</h4>
                    </div>
                    <div class='item-bonus item-prop'>{{#if
                            (gt system.bonus 0)
                        }}+{{/if}}{{system.bonus}}</div>
                    <div class='item-damage item-prop'>
                        {{#if system.explosive}}
                            {{system.bp}}BP
                        {{else}}
                            {{system.damage}}
                        {{/if}}
                    </div>
                    <div class='item-range item-prop'>
                        {{#if system.ranged}}
                            {{loc 'equipment.ranges' system.range}}
                        {{else}}
                            {{loc 'equipment.ranges.close'}}
                        {{/if}}
                    </div>
                    <div class='item-controls'>
                        <a
                            class='item-control item-equip
                                {{ifThen system.equipped "item-equipped" ""}}'
                            title='Equip'
                        ><i class='fas fa-shield-halved'></i></a>
                        <a class='item-control item-show' title='Show'><i
                                class='fas fa-comment'
                            ></i></a>
                        <a class='item-control item-edit' title='Edit'><i
                                class='fas fa-edit'
                            ></i></a>
                        <a class='item-control item-delete' title='Delete'><i
                                class='fas fa-trash'
                            ></i></a>
                    </div>
                </li>
            {{else}}
                <li class='item flexrow'>
                    <div class='item-name'>
                        <h4>{{loc 'equipment.no_weapons'}}</h4>
                    </div>
                </li>
            {{/each}}
        </ol>
    </div>
</div>


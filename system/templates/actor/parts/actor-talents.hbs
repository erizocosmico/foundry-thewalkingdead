<div class='sheet-section'>
    <header>
        <div>{{loc 'talents.tab'}}</div>
        <div><a class='item-control item-create' title='{{loc "add"}}' data-type='talent'><i
                    class='fas fa-plus'
                ></i>
                {{loc 'add'}}</a></div>
    </header>
    <div class='sheet-section-content'>
        <ol class='items-list'>
            {{#each talents as |item id|}}
                <li class='item flexrow' data-item-id='{{item._id}}'>
                    <div class='item-name'>
                        <div class='item-image'>
                            <a class='item-roll' data-roll-type='talent'><img
                                    src='{{item.img}}'
                                    title='{{item.name}}'
                                    width='24'
                                    height='24'
                                /></a>
                        </div>
                        <h4 class='item-expand'>{{item.name}}</h4>
                    </div>
                    <div class='item-controls'>
                        <a class='item-control item-edit' title='{{loc "edit"}}'><i
                                class='fas fa-edit'
                            ></i></a>
                        <a class='item-control item-delete' title='{{loc "delete"}}'><i
                                class='fas fa-trash'
                            ></i></a>
                    </div>
                </li>
                {{#if item.data.expanded}}
                    <li class='item flexrow item-expanded'>
                        {{#if item.data.description}}
                            {{{item.data.description}}}
                        {{else}}
                            {{loc 'talents.empty_description'}}
                        {{/if}}
                    </li>
                {{/if}}
            {{else}}
                <li class='item flexrow'>
                    <div class='item-name'>
                        <h4>{{loc 'talents.empty'}}</h4>
                    </div>
                </li>
            {{/each}}
        </ol>
    </div>
</div>
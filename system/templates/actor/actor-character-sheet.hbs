<form
    class="{{cssClass}} {{actor.type}} flexcol"
    autocomplete="off">
    {{!-- Sheet Header --}}
    <header class="sheet-header character">
        <img
            class="profile-img"
            src="{{actor.img}}"
            data-edit="img"
            title="{{actor.name}}"
            height="100"
            width="100" />
        <div class="sheet-fields">
            <div class="sheet-field">
                <label for="name">{{loc "name"}}:</label>
                <input id="name" name="name" type="text" value="{{actor.name}}" />
            </div>
            <div class="sheet-fields-group">
                <div class="sheet-field">
                    <label for="archetype">{{loc "character.archetype"}}:</label>
                    <input id="archetype" type="text" name="data.archetype" value="{{data.archetype}}" />
                </div>

                <div class="sheet-field">
                    <label for="experience">{{loc "character.experience"}}:</label>
                    <div class="char-box-track">
                        {{#each (range 1 10) as |n|}}
                        <div class="char-box {{#if (gte ../data.experience.current n)}}active{{/if}}" data-value="{{n}}" data-key="data.experience.current"></div>
                        {{/each}}
                    </div>
                </div>
            </div>
            <div class="sheet-field">
                <label for="drive">{{loc "character.drive"}}:</label>
                <input type="text" id="drive" name="data.drive.value" value="{{data.drive.value}}" />
                <div class="drive-check char-box {{#if data.drive.used}}active{{/if}}"></div>
            </div>
        </div>
    </header>

    {{!-- Sheet Tab Navigation --}}
    <nav
        class="sheet-tabs tabs"
        data-group="primary">
        <a
            class="item"
            data-tab="stats"
            >Stats</a
        >
        <a
            class="item"
            data-tab="talents"
            >Talents</a
        >
        <a
            class="item"
            data-tab="items"
            >Items</a
        >
        <a
            class="item"
            data-tab="bio"
            >Bio</a
        >
    </nav>

    {{!-- Sheet Body --}}
    <section class="sheet-body">
        {{!-- Stats Tab --}}
        <div
            class="tab stats"
            data-group="primary"
            data-tab="stats">
            {{> "systems/thewalkingdead/templates/actor/parts/actor-stats.hbs"}}
        </div>

        {{!-- Biography Tab --}}
        <div
            class="tab bio"
            data-group="primary"
            data-tab="bio">
            {{> "systems/thewalkingdead/templates/actor/parts/actor-bio.hbs"}}
        </div>

        {{!-- Items Tab --}}
        <div
            class="tab items"
            data-group="primary"
            data-tab="items">
            {{> "systems/thewalkingdead/templates/actor/parts/actor-items.hbs"}}
        </div>

        {{!-- Talents Tab --}}
        <div
            class="tab talents"
            data-group="primary"
            data-tab="talents">
            {{> "systems/thewalkingdead/templates/actor/parts/actor-talents.hbs"}}
        </div>
    </section>
</form>

<form class='{{cssClass}}' autocomplete='off'>
    <header>
        <img src='{{item.img}}' data-edit='img' title='{{item.name}}' />
        <h1>
            <input name='name' type='text' value='{{item.name}}' placeholder='{{loc "name"}}' />
        </h1>
    </header>
    <section>
        <div class='sheet-fields'>
            <div class='sheet-field'>
                <label for='prerequisite'>{{loc 'prerequisite'}}:</label>
                <input
                    id='prerequisite'
                    type='text'
                    name='data.prerequisite'
                    value='{{data.prerequisite}}'
                />
            </div>

            <div class='sheet-field long'>
                <label>{{loc 'description'}}:</label>
                {{editor
                    content=data.description
                    target='data.description'
                    rollData=rollData
                    button=true
                    owner=owner
                    editable=editable
                }}
            </div>
        </div>
    </section>
</form>
<form>
    <div class='form-group'>
        <label>{{loc 'rolls.modifier'}}</label>
        <input type='number' id='twd-roll-mod' value='0' />
    </div>
    {{#if showRange}}
        <div class='form-group'>
            <label>{{loc 'rolls.use_close_combat'}}</label>
            <input type='checkbox' id='twd-roll-close-combat' value='true' />
        </div>
    {{/if}}
    {{#if showPassive}}
        <div class='form-group'>
            <label>{{loc 'rolls.passive'}}</label>
            <input type='checkbox' id='twd-roll-passive' value='true' />
        </div>
    {{/if}}
</form>